<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="database.properties"/>

    <settings>
        <setting name="defaultExecutorType" value="REUSE"/>
        <setting name="localCacheScope" value="STATEMENT"/>

    </settings>


    <typeAliases>

        <!-- Common models -->
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Blog" alias="Blog"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.KeyValuePair" alias="KeyValuePair"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Wgs84Coordinate" alias="Wgs84Coordinate"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.OpeningHours" alias="OpeningHours"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Job" alias="Job"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Deal" alias="Deal"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Event" alias="Event"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.User" alias="User"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Order" alias="Order"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.OrderStatus" alias="OrderStatus"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Store" alias="Store"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Location" alias="Location"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.NewsItem" alias="NewsItem"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Customer" alias="Customer"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Category" alias="Category"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.CalendarEvent" alias="CalendarEvent"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.ImageGallery" alias="ImageGallery"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.ImageGalleryImage" alias="ImageGalleryImage"/>

        <!-- Config -->
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.BackendBucketConfig" alias="BackendBucketConfig"/>

        <!-- Match/Catch & Chat -->
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Match" alias="Match"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Tag" alias="Tag"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.MatchRequestPairing" alias="MatchRequestPairing"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.ChatImage" alias="ChatImage"/>

        <!-- socials -->
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.SocialPlatformAppCredentials"
                   alias="SocialPlatformAppCredentials"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.FacebookPage" alias="FacebookPage"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.FacebookPost" alias="FacebookPost"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.FacebookConfig" alias="FacebookConfig"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.InstagramPicture" alias="InstagramPicture"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.InstagramConfig" alias="InstagramConfig"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.TwitterConfig" alias="TwitterConfig"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.TwitterTweet" alias="TwitterTweet"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.SnipperClip" alias="SnipperClip"/>

        <!-- notifications -->
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.NotificationsPreference" alias="NotificationPreference"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.mail.EmailTemplate" alias="EmailTemplate"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.mail.EmailDataModel" alias="EmailDataModel"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.mail.NotificationJob" alias="NotificationJob"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.NotificationsPreference" alias="NotificationPreference"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.Template" alias="Template"/>

        <!-- devices -->
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.DeviceFamily" alias="DeviceFamily"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.PushConfig" alias="PushConfig"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.BackendPushConfig" alias="BackendPushConfig"/>
        <typeAlias type="eu.greenhouseinnovation.selly.common.model.push.model.Token" alias="Token"/>


    </typeAliases>


    <environments default="local-dev">
        <environment id="production">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="${prod-database.url}"/>
                <property name="username" value="${prod-database.username}"/>
                <property name="password" value="${prod-database.password}"/>
            </dataSource>
        </environment>
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="${dev-database.url}"/>
                <property name="username" value="${dev-database.username}"/>
                <property name="password" value="${dev-database.password}"/>
            </dataSource>
        </environment>
        <environment id="acceptance">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="${prod-database.url}"/>
                <property name="username" value="${prod-database.username}"/>
                <property name="password" value="${prod-database.password}"/>
            </dataSource>
        </environment>

        <environment id="local-dev">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="${local-database.url}"/>
                <property name="username" value="${dev-database.username}"/>
                <property name="password" value="${dev-database.password}"/>
            </dataSource>
        </environment>

        <environment id="local-prod">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="${local-prod-database.url}"/>
                <property name="username" value="${prod-database.username}"/>
                <property name="password" value="${prod-database.password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mapper/DealDao.xml"/>
        <mapper resource="mapper/EventDao.xml"/>
        <mapper resource="mapper/StoreDao.xml"/>
        <mapper resource="mapper/UserDao.xml"/>
        <mapper resource="mapper/NewsItemDao.xml"/>
        <mapper resource="mapper/OrderDao.xml"/>
        <mapper resource="mapper/PushConfigDao.xml"/>
        <mapper resource="mapper/TagDao.xml"/>
        <mapper resource="mapper/MatchDao.xml"/>
        <mapper resource="mapper/TwitterDao.xml"/>
        <mapper resource="mapper/InstagramDao.xml"/>
        <mapper resource="mapper/SnipperDao.xml"/>
        <mapper resource="mapper/BackendConfigDao.xml"/>
        <mapper resource="mapper/BlogDao.xml"/>
        <mapper resource="mapper/FacebookDao.xml"/>
        <mapper resource="mapper/ChatImageDao.xml"/>
        <mapper resource="mapper/LocationDao.xml"/>
        <mapper resource="mapper/JobDao.xml"/>
        <mapper resource="mapper/NotificationJobDao.xml"/>
        <mapper resource="mapper/EmailDao.xml"/>
        <mapper resource="mapper/PushNotificationTemplateDao.xml"/>
        <mapper resource="mapper/CategoryDao.xml"/>
        <mapper resource="mapper/CalendarEventDao.xml"/>
        <mapper resource="mapper/ImageGalleryDao.xml"/>
    </mappers>

</configuration>
