<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="eu.greenhouseinnovation.selly.common.model.dao.JobDao">


    <select id="getPendingJobsByType" resultType="Job" resultMap="JobResult">
        SELECT * FROM jobs WHERE job_type = #{jobType} AND status_code = '0'
    </select>

    <delete id="deleteJobById">
        DELETE FROM jobs WHERE id = #{id}
    </delete>

    <update id="updateJobStatus">
        UPDATE jobs
        <set>
            status_code = #{status.value},
            status = #{status},
            last_modified = NOW()
        </set>
        WHERE id = #{jobId}
    </update>

    <insert id="createJob" parameterType="Job">
        INSERT INTO jobs
        (id, job_type, meta, status_code, status, date_created, last_modified)
        VALUES
        (#{mId}, #{mType.value}, #{mMeta},0, #{mStatus}, NOW(), NOW())
    </insert>


    <resultMap type="Job" id="JobResult">
        <id property="mId" column="id"/>
        <result property="mMeta" column="meta"/>
        <result property="mStatus" column="status"/>
        <result property="mDateCreated" column="date_created"/>
        <result property="mLastModified" column="last_modified"/>
        <result property="mType" column="job_type"
                typeHandler="eu.greenhouseinnovation.selly.common.mybatis.handlers.JobTypeHandler"/>
    </resultMap>

</mapper>
